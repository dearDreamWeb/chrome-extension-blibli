{
  "name": "B站点赞投币记录辅助器",
  "version": "1.0",
  "description": "记录B站点赞和投币的记录",
  "manifest_version": 3,
  "background": {
    "service_worker": "static/js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.bilibili.com/*"
      ],
      "css": [
        "static/css/content.css"
      ],
      "js": [
        "static/js/jquery-3.6.4.min.js",
        "static/js/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "storage",
    "declarativeContent",
    "bookmarks",
    "webRequest",
    "contextMenus"
  ],
  "host_permissions": ["https://www.bilibili.com/*"],
  "web_accessible_resources": [
    {
      "resources": [
        "/images/app.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "/images/app.png",
      "32": "/images/app.png",
      "48": "/images/app.png",
      "128": "/images/app.png"
    },
    "default_title": "B站点赞投币记录辅助器"
  },
  "icons": {
    "16": "/images/app.png",
    "32": "/images/app.png",
    "48": "/images/app.png",
    "128": "/images/app.png"
  }
}